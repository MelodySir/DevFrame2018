<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ad_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_guide_background_3"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/btn_jump_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_btn_jump_splash"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        tools:ignore="RelativeOverlap" />

    <ViewStub
        android:id="@+id/vs_guide_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/view_splash_guide" />

</RelativeLayout>